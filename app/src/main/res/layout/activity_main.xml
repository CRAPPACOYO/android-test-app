<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onPickImageClick"
        android:text="Pick image"
        app:layout_constraintBottom_toTopOf="@id/btnToggleScan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/btnToggleScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:onClick="onScanClick"
        android:text="ToggleButton"
        android:textOff="Start Scan"
        android:textOn="Stop Scan"
        app:layout_constraintBottom_toTopOf="@id/lstBleDevices"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgImage"
        app:layout_constraintTop_toBottomOf="@id/btnPickImage" />

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:layout_margin="16dp"
        android:background="@drawable/image_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnPickImage"
        app:layout_constraintRight_toLeftOf="@id/imgImage2"
        />

    <ImageView
        android:id="@+id/imgImage2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:layout_margin="16dp"
        android:background="@drawable/image_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgImage"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ListView
        android:id="@+id/lstBleDevices"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToggleScan"
        />

</android.support.constraint.ConstraintLayout>